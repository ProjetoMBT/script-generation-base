<UserControl x:Class="ComponentPoolManager.ParameterEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="24" d:DesignWidth="300"
             HorizontalAlignment="Stretch" VerticalAlignment="Top" MouseDoubleClick="UserControl_MouseDoubleClick"
             Background="White">
    <Grid Background="White">
        <StackPanel Orientation="Horizontal">
            <TextBlock Foreground="DarkCyan" Text="MyParameterType" FontSize="12" VerticalAlignment="Center" 
                       Margin="5 0 5 0" Name="textBlockType" IsHitTestVisible="False"/>
            <TextBlock Foreground="Black" Text="myParameterName" FontSize="12" VerticalAlignment="Center" 
                       Name="textBlockVariableName" IsHitTestVisible="False"/>
        
        </StackPanel>
        <TextBox Name="textBoxInput" VerticalAlignment="Top" HorizontalAlignment="Stretch" Visibility="Collapsed"
                 KeyDown="textBoxInput_KeyDown"/>
    </Grid>
</UserControl>
